<config>
    <modules>
        <Metrilo_Analytics>
            <version>1.0.4</version>
        </Metrilo_Analytics>
    </modules>
    <frontend>
    	<layout>
            <updates>
                <metrilo_analytics>
                    <file>metrilo_analytics.xml</file>
                </metrilo_analytics>
            </updates>
        </layout>
        <events>
            <customer_login>
                <observers>
                    <metrilo_login>
                        <type>singleton</type>
                        <class>Metrilo_Analytics_Model_Observer</class>
                        <method>customerLogin</method>
                    </metrilo_login>
                </observers>
            </customer_login>
            <controller_action_layout_generate_blocks_after>
                <observers>
                    <page_view>
                        <type>singleton</type>
                        <class>Metrilo_Analytics_Model_Observer</class>
                        <method>trackPageView</method>
                    </page_view>
                </observers>
            </controller_action_layout_generate_blocks_after>
            <checkout_cart_product_add_after>
                <observers>
                    <add_to_cart>
                        <type>singleton</type>
                        <class>Metrilo_Analytics_Model_Observer</class>
                        <method>addToCart</method>
                    </add_to_cart>
                </observers>
            </checkout_cart_product_add_after>
            <sales_quote_remove_item>
                <observers>
                    <remove_from_cart>
                        <type>singleton</type>
                        <class>Metrilo_Analytics_Model_Observer</class>
                        <method>removeFromCart</method>
                    </remove_from_cart>
                </observers>
            </sales_quote_remove_item>
            <sales_order_place_after>
                <observers>
                    <place_order>
                        <type>singleton</type>
                        <class>Metrilo_Analytics_Model_Observer</class>
                        <method>trackNewOrder</method>
                    </place_order>
                </observers>
            </sales_order_place_after>
            <controller_action_postdispatch_checkout_cart_couponPost>
                <observers>
                    <applied_coupon>
                        <type>singleton</type>
                        <class>Metrilo_Analytics_Model_Observer</class>
                        <method>trackCoupon</method>
                    </applied_coupon>
                </observers>
            </controller_action_postdispatch_checkout_cart_couponPost>
        </events>
    </frontend>
    <global>
        <events>
            <sales_order_save_after>
                <observers>
                    <update_order>
                        <type>singleton</type>
                        <class>Metrilo_Analytics_Model_Observer</class>
                        <method>updateOrder</method>
                    </update_order>
                </observers>
            </sales_order_save_after>
        </events>
        <models>
            <metrilo_analytics>
                <class>Metrilo_Analytics_Model</class>
            </metrilo_analytics>
        </models>
    	<blocks>
            <metrilo_analytics>
                <class>Metrilo_Analytics_Block</class>
            </metrilo_analytics>
        </blocks>
        <helpers>
            <metrilo_analytics>
                <class>Metrilo_Analytics_Helper</class>
            </metrilo_analytics>
        </helpers>
    </global>
    <admin>
        <routers>
            <metrilo_analytics>
                <use>admin</use>
                <args>
                    <module>Metrilo_Analytics</module>
                    <frontName>metrilo_analytics</frontName>
                </args>
            </metrilo_analytics>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <metrilo_analytics>
                    <file>metrilo_analytics.xml</file>
                </metrilo_analytics>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <metrilo_analytics_settings>
            <settings>
                <enable>0</enable>
            </settings>
        </metrilo_analytics_settings>
    </default>
</config>
